<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Phim_Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_phim_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.SearchView
        android:layout_marginTop="5dp"
        android:id="@+id/search_phim_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false">

        <requestFocus />
    </android.support.v7.widget.SearchView>

    <LinearLayout
        android:background="@color/color_bac"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_noibat_Phim_Activity"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:text="Nổi Bật"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:id="@+id/txt_phimbo_Phim_Activity"
            android:text="Phim Bộ"
            android:layout_width="130dp"
            android:layout_height="50dp" />

        <TextView
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:id="@+id/txt_phimle_Phim_Activity"
            android:text="Phim Lẻ"
            android:layout_width="130dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_phim_noibat"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <ListView
        android:id="@+id/lv_phim_phimbo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lv_phim_phimle"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />
</LinearLayout>